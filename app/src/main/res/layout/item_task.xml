<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tvType"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/minimal_font_8"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/office_hour"/>

            <TextView
                android:id="@+id/tvTaskOH"
                android:text="1.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTaskOHContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="dev"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/overtime"/>

            <TextView
                android:id="@+id/tvTaskOT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2.0"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTaskOTContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fix bug"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>


</LinearLayout>